            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ל"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n16"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ז"
            android:textSize="22dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n17"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ס"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n18"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ב"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n19"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ה"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n20"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "נ"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n21"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "מ"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n22"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "צ"
            android:layout_marginLeft="-6dp"
            android:textSize="22dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n23"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ת"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n24"
            />
    </GridLayout>

    <Button
        android:text="בדיקה"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_gold"
        android:id="@+id/checkButton"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:text="חזור"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_blue"
        android:id="@+id/BACK"
        android:onClick="goToMainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="רמז"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_red"
        android:id="@+id/clueButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="רווח"
        android:layout_height="50dp"
        android:layout_width="330dp"
        android:layout_alignLeft="@id/gridLayout"
        android:layout_alignStart="@id/gridLayout"
        android:layout_marginLeft="10dp"
        android:id="@+id/n30"
        android:background="@drawable/rectangle_turquoise"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="20"
        android:gravity="right"
        android:id="@+id/answer"
        tools:height="200dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/n29"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkButton"
        android:layout_toRightOf="@+id/checkButton"
        android:layout_toEndOf="@+id/checkButton" />

    <TextView
        android:text="שלב X"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:id="@+id/textViewStageNumber"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/question" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="170dp"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:lines="8"
        android:id="@+id/question"
        android:textSize="26dp"
        android:gravity="center"
        android:focusable="false"
        android:background="@drawable/rectangle_gray"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/BACK"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
