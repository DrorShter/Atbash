<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a.atbash.StageActivity">

    <Button
        android:layout_width="38dp"
        android:layout_height= "40dp"
        android:text = "ך"
        android:textSize="22dp"
        android:id = "@+id/n25"
        android:background="@drawable/letter"
        android:textColor="@color/defaultLetterColor"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="269dp"
        android:layout_alignBottom="@+id/gridLayout"
        />

    <Button
        android:layout_width="38dp"
        android:layout_height= "40dp"
        android:text = "ץ"
        android:textSize="22dp"
        android:id = "@+id/n26"
        android:background="@drawable/letter"
        android:textColor="@color/defaultLetterColor"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="269dp"
        android:layout_alignBottom="@+id/gridLayout"/>

    <Button
        android:layout_width="38dp"
        android:layout_height= "40dp"
        android:text = "ף"
        android:textSize="22dp"
        android:id = "@+id/n27"
        android:background="@drawable/letter"
        android:textColor="@color/defaultLetterColor"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="302dp"
        android:layout_alignBottom="@+id/gridLayout"
        />
    <Button
        android:layout_width="38dp"
        android:layout_height= "40dp"
        android:text = "."
        android:textSize="22dp"
        android:background="@drawable/letter"
        android:textColor="@color/defaultLetterColor"
        android:id = "@+id/n28"
        android:layout_marginBottom="0dp"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignTop="@+id/n26"
        android:layout_alignLeft="@+id/n27"
        android:layout_alignStart="@+id/n27" />
    <Button
        android:layout_width="71dp"
        android:layout_height= "40dp"
        android:text = "->"
        android:textSize="22dp"
        android:id = "@+id/n29"
        android:background="@drawable/letter"
        android:textColor="@color/defaultLetterColor"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="269dp"
        android:layout_alignBottom="@+id/gridLayout"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"
        android:columnCount="8"
        android:id="@+id/gridLayout"
        android:layout_above="@+id/n30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ק"
            android:layout_marginLeft="9dp"
            android:textSize="22dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n1"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ר"
            android:layout_marginLeft="-6dp"
            android:textSize="22dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n2"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "א"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n3"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ט"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n4"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ו"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n5"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ן"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n6"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ם"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n7"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "פ"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n8"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ש"
            android:textSize="22dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n9"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ד"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n10"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ג"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n11"
        />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "כ"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n12"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "ע"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n13"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
            android:text = "י"
            android:textSize="22dp"
            android:layout_marginLeft="-6dp"
            android:background="@drawable/letter"
            android:textColor="@color/defaultLetterColor"
            android:id = "@+id/n14"
            />
        <Button
            android:layout_width="38dp"
            android:layout_height= "40dp"
